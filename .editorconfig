root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80

[Makefile]
indent_style = tab
indent_size = 8
max_line_length = off

[.github/workflows/build.yml]
indent_size = 2
max_line_length = off

[t/tests.json]
max_line_length = off
